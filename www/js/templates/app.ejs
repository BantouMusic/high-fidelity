<section role="region">
  <header>
    <button id="back"><span class="icon icon-back">Back</span></button>
    <menu type="toolbar">
      <a href="#podcasts/add" id="add-podcast-button"><span class="icon icon-add">Add podcast</span></a>
    </menu>
    <h1>Podcasts</h1>
  </header>
  <header id="add-podcast">
    <form action="#podcasts/create">
      <p>
        <input id="add-rss" type="text" required="" placeholder="Enter a podcast URL">
        <button type="reset">Clear</button>

        <a id="add-rss-cancel" role="button" class="actions">Cancel</a>
        <button id="add-rss-submit" class="actions recommend">Subscribe</button>
      </p>
    </form>
  </header>
</section>

<div id="podcasts"></div>

<div id="podcast-details"></div>
