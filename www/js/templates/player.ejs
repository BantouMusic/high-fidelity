<% if (episode.id) { %>
  <% if (blobURL) { %>
    <% if (!softwareDecode) { %>
      <audio id="audio" src="<%= blobURL %>" episode="<%= episode.get('id') %>" autoload autoplay></audio>
    <% } %>
    <a id="play-pause" href="#play-pause" data-paused="0"><span class="hide">Play/Pause</span></a>
  <% } %>
  <h2 class="podcast-title hide"><%= episode.podcast().get('name') %></h2>
  <h3 class="episode-title"><%= episode.get('title') %></h3>
  <% if (!!episode.get('description')) { %>
    <p class="description"><%= episode.get('description') %></p>
  <% } %>
<% } else { %>
  <h2 class="title">Nothing playing</h2>
<% } %>
